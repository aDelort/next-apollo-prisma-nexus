{
  "name": "next-apollo-prisma-nexus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn generate-schema && yarn gql-codegen && next build",
    "start": "next start",
    "nexus:dev": "ts-node-dev --transpile-only --no-notify --respawn src/pages/api/graphql.ts",
    "nexus:build": "tsc",
    "reset-db": "yarn prisma migrate reset",
    "stop-infra": "docker compose down",
    "start-infra": "docker compose up -d",
    "reset-infra": "yarn stop-infra && yarn start-infra && sleep 1 && yarn prisma migrate dev && yarn seed",
    "gql-codegen": "graphql-codegen --config codegen.yml",
    "lint": "eslint src",
    "generate-schema": "ts-node-dev --transpile-only --no-notify src/pages/api/graphql.ts",
    "vercel-build": "yarn prisma migrate deploy && yarn prisma generate && yarn build",
    "seed": "prisma db seed --preview-feature"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@prisma/client": "^2.23.0",
    "apollo-server": "^2.25.0",
    "apollo-server-micro": "^2.25.0",
    "graphql": "^15.5.0",
    "lodash": "^4.17.21",
    "next": "10.2.3",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.35.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@graphql-codegen/typescript-react-apollo": "2.2.5",
    "@types/faker": "^5.5.6",
    "@types/lodash": "^4.14.170",
    "@types/react": "17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "faker": "^5.5.3",
    "prettier": "^2.3.0",
    "prisma": "^2.23.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  }
}
